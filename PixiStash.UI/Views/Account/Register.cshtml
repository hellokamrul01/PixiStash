@model PixiStash.Application.DTO.UserDTO
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>



<div class="container mt-4">
    <h2>User Registration</h2>
    <form asp-action="Register" method="post" class="needs-validation" novalidate>
        @* Hidden Fields for BranchId and CompanyId *@
        @* <input asp-for="BranchId" type="hidden" />
        <input asp-for="CompanyId" type="hidden" /> *@
        <input asp-for="BranchId" type="hidden" value="@ViewBag.BranchId" />
        <input asp-for="CompanyId" type="hidden" value="@ViewBag.CompanyId" />


        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" required />
                <div class="invalid-feedback">Please enter your first name.</div>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="UserName">Username</label>
                <input asp-for="UserName" class="form-control" required />
                <div class="invalid-feedback">Please enter a username.</div>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <div class="invalid-feedback">Please enter a password.</div>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DateOfBirth">Date of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-check mt-4">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label class="form-check-label">Is Active?</label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>

@section Scripts {
    <script>
        // JavaScript for form validation using Bootstrap classes
        (function () {
            'use strict';

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation');

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
