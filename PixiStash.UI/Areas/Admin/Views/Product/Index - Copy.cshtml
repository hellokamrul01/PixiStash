@model List<PixiStash.Application.DTO.ProductDto>

@{
    ViewData["Title"] = "Product List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Product Image</th>
            <th>Default Buying Price</th>
            <th>Default Selling Price</th>
            <th>Branch Id</th>
            <th>Quantity</th>
            <th>Company Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ProductImageUrl))
                    {
                        <img src="@product.ProductImageUrl" alt="Product Image" class="img-thumbnail" />
                    }
                    else if (product.ProductImage != null && product.ProductImage.Length > 0)
                    {
                        var base64Image = $"data:image/png;base64,{Convert.ToBase64String(product.ProductImage)}";
                        <img src="@base64Image" alt="Product Image" class="img-thumbnail" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@product.DefaultBuyingPrice</td>
                <td>@product.DefaultSellingPrice</td>
                <td>@product.BranchId</td>
                <td>@product.Quantity</td>
                <td>@product.CompanyId</td>
            </tr>
        }
    </tbody>
</table>
